@model List<BBS.Models.Post>

<link rel="stylesheet" href="~/Post.css">
<h3>Post</h3>
@if (User.Identity!.IsAuthenticated)
{
    <button id="toggleCreatePostBtn">Create Post</button>
    <div id="PostFormWrapper">
        <br />
        <p>Title</p>
        <input id="Title" />
        <div id="CreatePostForm"></div>
        <input id="Tag" />
        <button id="submitPost">Submit</button>
    </div>
}


@foreach (var item in Model)
{
    <div class="PostUnit">
        <a asp-controller="Post" asp-action="GetPost" asp-route-Id="@item.Id">Title : @item.Title</a>
        <div class="UserInfo">
            <p>@item.UserId</p>
            <p>UserName : @item.User.Name</p>
            <img src="data:image/png;base64, @item.User.Avatar" width="64" height="64">
        </div>
        
        <p class="timeIndicator">
            <span>Date Created : @item.Created.ToString("hh:mm yy/MM/dd")</span>
            <span>Date Modified : @item.Modified.ToString("hh:mm yy/MM/dd")</span>
        </p>
    </div>
    <br>
}
<script src="~/Post.js" defer></script>