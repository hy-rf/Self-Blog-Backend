@using BBS.Models;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;
<style>
    .EditButton {
        cursor: pointer;
        border: 1px black solid;
        border-radius: 3px;
    }

        .EditButton:hover {
            color: blue;
        }
</style>
<h3>Post</h3>
<button id="Post">Click to Post</button>

@foreach (var item in ViewBag.Posts)
{
    <div id="PostUnit@(item.Id)">
        <p>Post Id : @item.Id</p>
        <p>Title : @item.Title</p>
        <p>Content : @item.Content</p>
        <p>UserId : @item.UserId</p>
        <p>Date Created : @item.CreatedDate</p>
        <p>Date Modified : @item.ModifiedDate</p>
        <p>Featured : @item.Featured</p>
        <p>Visibility : @item.Visibility</p>
        <p>Tags : @item.Tags</p>
        <p>Likes : @item.Likes</p>
        @if (Accessor.HttpContext.Session.GetInt32("Id") != null)
        {
            if (item.UserId == Accessor.HttpContext.Session.GetInt32("Id"))
            {
                <a class="EditButton" onclick="showEditPostPanel(@item.Id)">Edit</a>
            }
            <a class="ReplyButton" onclick="showReplyPanel(@item.Id)">Reply</a>
        }

    </div>
    <br>
}
<script src="~/Post.js" defer></script>