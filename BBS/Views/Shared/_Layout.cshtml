@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BBS</title>
    <link rel="stylesheet" href="~/_Layout.css">
</head>

<body>
    <header>
        <a asp-controller="Home" asp-action="Index">Home</a>
        @if (Accessor.HttpContext.Session.GetInt32("Id") != null)
        {
            <a asp-controller="User" asp-action="UserCenter">Hello! @(Accessor.HttpContext.Session.GetString("Name"))</a>
        }
        else
        {
            <a asp-controller="User" asp-action="Index">Login/Signup</a>
        }
        <a asp-controller="Post" asp-action="Index">Post</a>
    </header>
    <main>
        <br>
        @RenderBody()
    </main>
    <footer>example footer</footer>
    <script src="~/_Layout.js"></script>
</body>

</html>