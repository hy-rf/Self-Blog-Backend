@using BBS.Models;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;

<link rel="stylesheet" href="~/Post.css">
<h3>Post</h3>
<button id="Post">Click to Post</button>

@foreach (var item in ViewBag.Posts)
{
    <div id="PostUnit@(item.Id)">
        <p>Post Id : @item.Id</p>
        <a asp-controller="Post" asp-action="GetPost" asp-route-Id="@item.Id">Title : @item.Title</a>
        <p>Content : @item.Content</p>
        <p>UserId : @item.UserId</p>
        <span>Date Created : @item.CreatedDate</span>
        <span>Date Modified : @item.ModifiedDate</span>
    </div>
    <br>
}
<script src="~/Post.js" defer></script>